{
    "compilerOptions": {
		"target": "es2022",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
		"preserveConstEnums": true,
        "sourceMap": true,
		"rootDir": "ts",
        "outDir": "js",
        "baseUrl": ".",
        "paths": {
            "*": [
                "libraries/*",
                "ts/types/*"
            ]
        }
    },
    "include": [
        "ts"
    ],
	"exclude": ["libraries", "**/*.spec.ts"]
}