{
    "compileOnSave": true,
    "compilerOptions": {
		"target": "es2022",
		"module": "node16",
		"strict": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
		"forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
		"rootDir": "src",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src"
    ],
	"exclude": ["node_modules", "**/*.spec.ts"],
    "esm": true,
}