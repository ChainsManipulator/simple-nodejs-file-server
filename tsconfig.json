{
    "compilerOptions": {
		"target": "es2021",
		"module": "node16",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
		"preserveConstEnums": true,
        "sourceMap": true,
		"rootDir": "src",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src"
    ],
	"exclude": ["node_modules", "**/*.spec.ts"]
}